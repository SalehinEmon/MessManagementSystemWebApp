@using MessManagementSystemWebApp.Models;
@{
    ViewBag.Title = ViewBag.usersProfile.Name + "'s Profile";
}


@if (ViewBag.usersProfile != null)
{
    User usersProfile = ViewBag.usersProfile;

    <div class="col-md-6">
        <div class="profile-head">
            <h5>
                @usersProfile.Name
            </h5>
            <h6>
                @*Web Developer and Designer*@
            </h6>

            @*<p class="proile-rating">RANKINGS : <span>8/10</span></p>*@
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Profile</a>
                </li>
                @*<li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Timeline</a>
                    </li>*@
            </ul>
        </div>
    </div>



    <div class="col-md-8">
        <div class="tab-content profile-tab" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <div class="row">
                    @*<div class="col-md-6">
                <label>User Name</label>
            </div>
            <div class="col-md-6">
                <p>@usersProfile.Name</p>
            </div>*@
                    <br />
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>Name</label>
                    </div>
                    <div class="col-md-6">
                        <p>@usersProfile.Name</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>Email</label>
                    </div>
                    <div class="col-md-6">
                        <p>@usersProfile.Email</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>Account Balance</label>
                    </div>
                    <div class="col-md-6">
                        <p>@usersProfile.AccountBalance</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>Account Type</label>
                    </div>
                    <div class="col-md-6">
                        @if (@usersProfile.AccountType.Equals("a"))
                        {
                            <p>Admin</p>
                        }
                        else
                        {
                            <p>User</p>
                        }

                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <label>Account Status</label>
                    </div>
                    <div class="col-md-6">
                        @if (@usersProfile.Status.Equals("active"))
                        {
                            <p>Active User</p>
                        }
                        else
                        {
                            <p class="text-danger">Inactive User</p>
                        }

                    </div>
                </div>


                <div class="row">
                    <div class="col-md-6">
                        <label>Transaction History</label>
                    </div>
                    <div class="col-md-6">

                          <p><a href="/BillingHistory/PerUser?userid=@usersProfile.Id">Click here</a></p>

                    </div>
                </div>

            </div>

        </div>
    </div>


}
else
{
    <h2>Welcome to Profile info</h2>
}



