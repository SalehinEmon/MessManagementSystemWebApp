        <div class="col-sm-3">
            @Html.TextBox("time1end", null, new { @class = "form-control" })
        </div>
    </div>


    <div class="form-group row">

        @Html.Label("time2start", "Meal 2 Start Time", new { @class = "col-sm-2 col-form-label" })
