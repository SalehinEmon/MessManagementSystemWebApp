<script src="~/Content/jqueryvalidation/jquery.validate.min.js"></script>

<script>

    document.getElementById("mealSetting").className += "  active";

    var wickedPickerStartOption =
    {
        title: '  '

    }



    $('#time1start').wickedpicker(wickedPickerStartOption);
    $('#time1end').wickedpicker();

    $('#time2start').wickedpicker();
    $('#time2end').wickedpicker();

    $('#time3start').wickedpicker();
    $('#time3end').wickedpicker();




    $(document).ready(function () {

        $("#timeForm").validate({
            rules: {
                time1start: {
                    required: true
                    //minlength:2
                },
                time2start:
                {
                    required: true
                    
                },
                time3start:
                {
                    required: true
                    
                },

                 time1end:
                {
                    required: true
                    
                },
                time2end:
                {
                    required: true
                    
                },
                time3end:
                {
                    required: true
                    
                }
            }

        });

    });

</script>
