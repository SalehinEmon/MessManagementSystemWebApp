        </div>

        @Html.Label("time2end", "Meal 2 End Time", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-3">
            @Html.TextBox("time2end", null, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">

