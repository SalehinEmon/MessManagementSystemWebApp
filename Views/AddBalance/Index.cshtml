@using MessManagementSystemWebApp.Manager;
@{
    ViewBag.Title = "Add Balance";
}

<h2>Add Balance</h2>

@if (ViewBag.msg != null)
{
    <h3>@ViewBag.msg</h3>
}

@section cssandjs
{
    <link href="~/Content/jqueryvalidation/errorMsg.css" rel="stylesheet" />

}



@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "addBalance", id = "addBalance" }))
{
    <div class="form-group row">

        @Html.Label("email", "Email", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-5">
            @Html.TextBox("email", null, new { @class = "form-control", type = "email" })
        </div>
    </div>

    <div class="form-group row">

        @Html.Label("addbalance", "Balance", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-5">
            @Html.TextBox("addbalance", null, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-7">
            <button type="submit" class="btn btn-primary btn-block">Add Balance</button>
        </div>
    </div>
}

<script src="~/Content/jqueryvalidation/jquery.validate.min.js"></script>

<script>
    document.getElementById("mealSetting").className += "  active";

     $(document).ready(function () {

        $("#addBalance").validate({
            rules: {

                email:
                {
                    required: true,
                    email: true

                },
                addbalance:
                {
                    required: true,
                    min : @UserManager.minimumBalance
                }


            }

        });


    });
</script>

